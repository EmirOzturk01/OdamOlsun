<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Odam Olsun</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/OdamOlsunWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="User" asp-controller="Home" asp-action="Index"><i
                        class="bi bi-house-fill"></i> Odam Olsun</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="User" asp-controller="Home"
                                asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Ilanlar" asp-action="Index">İlanlar</a>
                        </li>
                        <!-- Eğer admin giriş yaptıysa -->
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <div class="dropdown">
                                <button type="button" class="btn btn-primary bg-primary border-0 dropdown-toggle"
                                    data-bs-toggle="dropdown">Manage
                                </button>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Ilan"
                                            asp-action="Index">İlanlar</a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </ul>
                    @if (User.IsInRole(SD.Role_Customer))
                    {
                        <a class="text-white text-decoration-none px-2" asp-area="User" asp-controller="Ilanlar"
                            asp-action="Create"><i class="bi bi-plus-circle"></i> İlan Ekle</a>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    <footer class="border-top border-black bg-secondary bg-opacity-50 mt-5">
        <div class="container mt-5 ">
            <div class="row">
                <div class="col-lg-4 col-md-3 col-sm-4 col-xs-6">
                    <div class="_kl_ds_we">
                        <div class="head-footer">
                            <h4 class="border-bottom border-black">Odam Olsun</h4>
                            <p>Taşınmak istediğiniz şehirdeki pahalı kiralardan kurtulup size uygun
                                odayı makul fiyatlara kiralayabileceğiniz veya evinizdeki bir odayı
                                kiraya verebileceğiniz kişileri bulmanızı sağlayan web sitesi.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-3 col-sm-4 col-xs-6">
                    <div class="_kl_ds_we">
                        <div class="head-footer col-12 row">
                            <h4 class="border-bottom border-black">POPÜLER İLLER</h4>
                            <a asp-controller="Ilanlar" asp-action="Index" asp-route-il="34" class="d-block col-6"><i
                                    class="bi bi-geo-alt"></i>İstanbul</a>
                            <a asp-controller="Ilanlar" asp-action="Index" asp-route-il="6" class="d-block col-6"><i
                                    class="bi bi-geo-alt"></i>Ankara</a>
                            <a asp-controller="Ilanlar" asp-action="Index" asp-route-il="35" class="d-block col-6"><i
                                    class="bi bi-geo-alt"></i>İzmir</a>
                            <a asp-controller="Ilanlar" asp-action="Index" asp-route-il="16" class="d-block col-6"><i
                                    class="bi bi-geo-alt"></i>Bursa</a>
                            <a asp-controller="Ilanlar" asp-action="Index" asp-route-il="7" class="d-block col-6"><i
                                    class="bi bi-geo-alt"></i>Antalya</a>
                            <a asp-controller="Ilanlar" asp-action="Index" asp-route-il="26" class="d-block col-6"><i
                                    class="bi bi-geo-alt"></i>Eskişehir</a>

                        </div>

                    </div>
                </div>
                <div class="col-lg-4 col-md-3 col-sm-4 col-xs-6">
                    <div class="_kl_ds_we">
                        <div class="head-footer">
                            <h4 class="border-bottom border-black">BİZE ULAŞIN</h4>
                            <ul class="un-hover">
                                <li><i class="bi bi-geo-alt-fill"></i> Kuloğlu Mh., Barbaros Blv. Yıldız İş Hanı No:9,
                                    34353 Beşiktaş/İstanbul</li>
                                <li><i class="fas fa-mobile-alt"></i> +90 538 030 92 97</li>
                                <li><i class="far fa-envelope"></i> ozturkemir2001@gmail.com</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-12 border-top mt-2 border-dark mb-0">
                    <div class="row _pl_we_sq">
                        <div class="col-12 mt-2 text-center">
                            <div class="last-01">
                                <p> © OdamOlsun. 2024 Bütün Hakları Saklıdır. Made by <a href="https://github.com/EmirOzturk01" style="text-decoration: none;" target="_blank">Emir Öztürk</a> | 
                                <a asp-controller="Home" asp-action="Privacy" class="text-primary">Privacy</a>

                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
